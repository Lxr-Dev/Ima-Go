<div class="card bg-dark text-white">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">{{ image.title }}</h3>
    <button class="btn btn-danger btn-sm" id="btn-delete" data-id="{{image.filename}}" style="display: {{ delButton }};">
      <i class="fa fa-times"></i> Eliminar
    </button>
  </div>
  <div class="card-body">
    <p>{{ image.description }}</p>
    <div class="text-center">
      <img src="/uploads/{{image.filename}}" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center phone-btn">
    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
      <i class="fas fa-thumbs-up"></i> Me gusta
    </button>
    <p class="phone">
      Me Gusta:
      <span class="likes-count"> {{image.likes}}</span>
      <i class="fas fa-heart"></i>
    </p class="phone">
    <p class="phone">
      Vistas:
      <i class="fas fa-eye"></i> {{image.views}}
    </p>
    <p class="phone">
      <i class="far fa-clock"></i>
      {{timeago image.timestamp}}
    </p>
  </div>
</div>

<!-- COMMENTS -->
<div class="card mt-2 bg-dark text-white">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3 class="card-title">Comentarios</h3>
    <button class="btn btn-info phone-btn" id="btn-toggle-comment">
      <i class="fa fa-comments-o"></i> Comentar
    </button>
  </div>
  <div class="card-body">
    <blockquote id="post-comment">
      <form action="/images/{{ image.filename }}/comment" method="POST">
        <div class="form-group mb-3">
          <input type="text" class="form-control bg-dark text-light border border-success" name="name"
            placeholder="Nombre">
        </div>
        <div class="form-group mb-3">
          <input type="email" class="form-control bg-dark text-light border border-success" name="email"
            placeholder="Correo Electronico">
        </div>
        <div class="form-group mb-3">
          <textarea name="comment" class="form-control bg-dark text-light border border-success" rows="2"
            placeholder="Escribe tu Comentario"></textarea>
        </div>
        <div class="form-group mb-3">
          <button class="btn btn-outline-success" id="btn-comment" >
            <i class="fa fa-comment"></i> Publicar
          </button>
        </div>
      </form>
    </blockquote>
    {{#each comments}}
        <div class="row">
          <div class="col">
            <div class="card bg-dark text-white" style="border: none;">
              <div class="card-body">
                <p class="lead">{{comment}}</p>
                <footer class="blockquote-footer">
                  {{name}}- {{timeago timestamp}}
                </footer>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
  </div>
</div>