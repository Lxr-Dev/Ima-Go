{{#if sidebar.comments}}

<div class="card mt-2 bg-dark text-white">
  <div class="card-header">
    <h5 class="card-title d-flex align-items-center">
      <span class="material-icons me-2">
        forum
      </span>
      Ãšltimos Comentarios
    </h5>
  </div>
  <div class="card-body">
      {{#each sidebar.comments}}
      <div class="row">
        <div class="col">
          <a href="/images/{{image.filename}}">
            <img src="/uploads/{{image.filename}}" class="img-thumbnail w-70 bg-dark text-white" style="border: none;">
          </a>
        </div>
        <div class="col">
          <blockquote class="w-100">
            <p>{{comment}}</p>
            <footer class="blockquote-footer">
              <span>{{name}}</span>
              <span>{{timeago timestamp}}</span>
            </footer>
          </blockquote>
        </div>
      </div>
      {{/each}}
  </div>
</div>
{{/if}}

